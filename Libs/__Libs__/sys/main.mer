# Lists all files and folders in the specified directory.
let list_dir(path) = dll_load("C:\\MercuryLang\\Libs\\__Libs__\\sys\\init.dll", "__list_dir", [path])

# Runs a command with the given file as argument (e.g., interpreter + script)
let run_file_with(command, file) = cmd(command + " " + file)
